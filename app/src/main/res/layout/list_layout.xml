<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--     LATEST MOVIES REGION ENDS HERE  -->


            <RelativeLayout
                android:id="@+id/rlLatestOuter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlLatest"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:tag="sticky">

                    <TextView
                        fontPath="fonts/Brandon_bold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="7dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="@string/Collection.Latest"
                        android:textColor="@color/black"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvLatestViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:layout_alignParentRight="true"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/Collection.ViewAll"
                        fontPath="fonts/Brandon_Regular.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvLatest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlLatest"
                    android:orientation="vertical" />

                <ProgressBar
                    android:id="@+id/pbLatest"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular_progress_bar_bg"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlOuterTopRated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlLatestOuter"
                >

                <RelativeLayout
                    android:id="@+id/rlTopRated"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:tag="sticky">

                    <TextView
                        android:id="@+id/section_one_text"
                        fontPath="fonts/Brandon_bold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="@string/Collection.TopRated"
                        android:textColor="@color/black"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvTopRatedViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:layout_alignParentRight="true"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/Collection.ViewAll"
                        fontPath="fonts/Brandon_reg.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

<!--

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/refresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTopRated">
-->

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvTopRated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@+id/rlTopRated"/>
<!--

                </android.support.v4.widget.SwipeRefreshLayout>
-->


                <ProgressBar
                    android:id="@+id/pbTopRated"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular_progress_bar_bg"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/rlOuterTopRated"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlPopular"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:tag="sticky">

                    <TextView
                        android:id="@+id/section_two_text"
                        fontPath="fonts/Brandon_bold.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:elevation="7dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="@string/Collection.Popular"
                        android:textColor="@color/black"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvPopularViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:layout_alignParentRight="true"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/Collection.ViewAll"
                        fontPath="fonts/Brandon_Regular.otf"
                        tools:ignore="MissingPrefix"/>

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlPopular"
                    android:orientation="vertical" />

                <ProgressBar
                    android:id="@+id/pbPopular"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular_progress_bar_bg"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <!--    POPULAR MOVIES REGION ENDS HERE  -->




        </RelativeLayout>

    </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>
</FrameLayout>