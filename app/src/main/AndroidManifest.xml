<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.popular_movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.movie.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.content_details.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:screenOrientation="portrait"
        android:theme="@style/AppTheme.ActionBar.Transparent" />

        <activity
            android:name=".ui.activity.ReviewActivity"
            android:label="@string/title_activity_review"
            android:parentActivityName=".ui.content_details.MovieDetailActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.popular_movies.ui.content_details.MovieDetailActivity" />
        </activity>

        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.listing.MoviesListingActivity" />

        <activity android:name=".ui.listing.tv_series_listing.TvSeriesListingActivity" />

        <receiver
            android:name=".widget.MovieWidgetProvider"
            android:label="@string/widget_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <provider
            android:name=".database.MovieProvider"
            android:authorities="com.capstone.showbox"
            android:exported="false" />

        <service android:name=".widget.FavouritesWidgetService" />

    </application>

</manifest>